<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{text}}</p>
  {{#if comments.length}}
    <div class="col-md-6 project-list">
      <h3>Current Comments:</h3>

      {{#each comments as |comment|}}
      <div class="row mb-2">
        <div class="col-md-4">
          <p>{{comment.text}}</p>
          <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
  {{/if}}
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>
