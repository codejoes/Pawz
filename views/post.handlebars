<div class="ag-format-container">
  <div class="ag-courses_box">
    <div class="ag-courses_item">
      <a href="#" class="ag-courses-item_link">
        <div class="ag-courses-item_bg"></div>

        <div class="ag-courses-item_title">
          <h2>{{title}}</h2>
          <p>{{text}}</p>
        </div>


        <div class="ag-courses-item_date-box">
          Created by {{user.name}}
          <span class="ag-courses-item_date">
             on {{format_date date_created}}
          </span>
        </div>
      </a>
    </div>
  </div>
</div>

<div class="card text-center" id="post-update-card">
    <h3>Update your post!</h3>
    <form class="form update-post-form">
      <div class="form-group">
        <label for="updated-title">Post title:</label>
        <input class="form-input" type="text" id="updated-title" name="updated-title" />
      </div>
      <div class="form-group">
        <label for="updated-text">Post text:</label>
        <textarea class="form-input" id="updated-text" name="updated-text"></textarea>
      </div>
      <div class="form-group">
        <button id="submitEditBtn" type="submit" class="btn btn-primary" data-id="{{id}}">Update</button>
      </div>
    </form>
</div>

